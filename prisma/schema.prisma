// Prisma schema for MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  username  String   @unique
  password  String
  roleId    String?
  role      Role?     @relation(fields: [roleId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Role model removed
model Role {
  id           String   @id @default(cuid())
  name         String   @unique
  allowedMenus Json // Menü yetkileri (örn: ["dashboard", "cash", ...])
  users        User[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Business {
  id               String            @id @default(cuid())
  name             String
  address          String
  phone            String
  email            String
  city             String
  district         String
  taxOffice        String
  taxNumber        String
  services         Service[]
  staff            Staff[]
  customers        Customer[]
  appointments     Appointment[]
  cashTransactions CashTransaction[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model Service {
  id           String        @id @default(cuid())
  businessId   String
  business     Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  name         String
  description  String
  taxRate      Int
  price        Int
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  staff        Staff[]       @relation("StaffServices")
}

model Staff {
  id           String        @id @default(cuid())
  businessId   String
  business     Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  name         String
  email        String
  phone        String
  services     Service[] @relation("StaffServices")
// Ara tablo: Staff ile Service arasında çoktan çoğa ilişki
// Prisma'da yukarıdaki relation tanımı ile otomatik olarak ara tablo oluşturulur, elle model eklemeye gerek yoktur.
  nationalId   String
  address      String
  notes        String?
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Customer {
  id           String        @id @default(cuid())
  businessId   String
  business     Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  name         String
  email        String
  phone        String
  taxNumber    String?
  taxOffice    String?
  companyName  String?
  city         String?
  district     String?
  customerType String?
  website      String?
  address      String?
  notes        String?
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Appointment {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  serviceId  String
  service    Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  staffId    String
  staff      Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  date       DateTime
  status     String
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CashTransaction {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  type        String
  amount      Int
  paymentType String
  taxRate     Int
  company     String?
  documentNo  String?
  date        DateTime
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
